@import 'nib/vendor'

html, body
  overflow hidden
  font-family "Gill Sans", "Gill Sans MT"
  margin 0
  padding 0

header, footer
  position absolute
  z-index 99
  right 20px
  left 40px
  color #999
  margin 0
  padding 0
  font-size 80%

footer
  bottom 2px
  
  ul, li
    margin 0
    padding 0
    list-style none
    float right
  
  li
    display block
    float left
    margin-left 10px